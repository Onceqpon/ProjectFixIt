@model ProjectFixIt.Models.Error

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły</h1>

<div>
    <h4>Błąd</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Nazwa Błędu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Treść Błedu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ErrorMessage)
        </dd>
        <dt class = "col-sm-2">
            Znaleziony Przez
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WorkerFound)
        </dd>
        <dt class = "col-sm-2">
            Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RepairStatus)
        </dd>
        <dt class = "col-sm-2">
            Data Znalezienia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FoundDate)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Wróć do listy</a>
</div>
